<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane maxHeight="90.0" minHeight="90.0" prefWidth="550.0" styleClass="user-card" stylesheets="@../static/style/style_UserManagement.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dottec.pdi.project.pdi.controllers.UserCardController">
    <children>
        <HBox alignment="CENTER_LEFT" maxHeight="90.0" maxWidth="1.7976931348623157E308" spacing="15.0" style="-fx-background-color: transparent;">
            <children>
                <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../static/img/user.png" />
                    </image>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </ImageView>
                <VBox alignment="CENTER_LEFT" spacing="2.0">
                    <children>
                        <Label fx:id="nameField" styleClass="label-collaborator-name" text="Nome do UsuÃ¡rio" />
                        <Label fx:id="emailField" style="-fx-text-fill: #808080;" text="usuario@dominio.com" />
                    </children>
                </VBox>
                <Label fx:id="roleLabel" styleClass="label-collaborator-department" text="CARGO" />
            <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="statusLabel" styleClass="label-collaborator-status" text="ATIVO" />
                <Button fx:id="editBtn" onAction="#handleEditAction" styleClass="button-icon">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../static/img/edit.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="deleteBtn" onAction="#handleDeleteAction" styleClass="button-icon">
                    <graphic>
                        <ImageView fitHeight="28.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../static/img/trash.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </children>
            <padding>
                <Insets right="10.0" />
            </padding>
        </HBox>
    </children>
</StackPane>
