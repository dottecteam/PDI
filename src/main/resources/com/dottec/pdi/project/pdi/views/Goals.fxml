<VBox fx:id="collaboratorGoalsMainVBox" prefHeight="600.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dottec.pdi.project.pdi.viewmodel.CollaboratorGoalsViewModel">
    <stylesheets>
        <URL value="@../static/style/style_Goals.css" />
        <URL value="@../static/style/style_template.css" />
    </stylesheets>
    <padding>
        <Insets bottom="40.0" />
    </padding>

    <children>
        <HBox spacing="20.0">
            <padding>
                <Insets left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <StackPane alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <GridPane style="-fx-background-color: #F6F6F6; -fx-background-radius: 20;" vgap="5.0">
                            <effect>
                                <DropShadow color="#00000040" />
                            </effect>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label style="-fx-text-fill: #4B0081;" styleClass="mid-label" text="Nome">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="nameField" editable="false" styleClass="label-not-editable" text="Carregando..." GridPane.rowIndex="1" />
                                <Label style="-fx-text-fill: #4B0081;" styleClass="mid-label" text="Email" GridPane.rowIndex="2">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="emailField" editable="false" styleClass="label-not-editable" text="Carregando..." GridPane.rowIndex="3" />
                                <Label style="-fx-text-fill: #4B0081;" styleClass="mid-label" text="CPF" GridPane.columnIndex="1">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="cpfField" editable="false" styleClass="label-not-editable" text="Carregando..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label style="-fx-text-fill: #4B0081;" styleClass="mid-label" text="Setor" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Label>
                                <ChoiceBox id="selectDepartment" fx:id="departmentField" mouseTransparent="true" prefWidth="1500.0" styleClass="label-not-editable" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>
                        </GridPane>
                  <HBox maxHeight="30.0" maxWidth="200.0" spacing="10.0">
                     <children>
                                <Button fx:id="confirmEditButton" mnemonicParsing="false" onAction="#handleConfirmEdit" styleClass="basic-button" text="Confirmar" visible="false" />
                                <Button fx:id="cancelEditButton" mnemonicParsing="false" onAction="#handleCancelEditing" styleClass="cancel-button" text="Cancelar" visible="false" />
                     </children>
                     <StackPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </StackPane.margin>
                  </HBox>
      
                                                      <ImageView fx:id="editButton" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#handleEnableEditing" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../static/img/edit.png" />
                            </image>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                     <StackPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </StackPane.margin>
                        </ImageView>
                    </children>
                </StackPane>
                <VBox alignment="CENTER" prefWidth="300.0" style="-fx-background-color: #F6F6F6; -fx-background-radius: 20;">
                    <effect>
                        <DropShadow color="#00000040" />
                    </effect>
               <children>
                  <PieChart fx:id="statusPieChart" prefHeight="173.0" prefWidth="300.0" />
                  <Label fx:id="percentageLabel" text="Carregando..." />
               </children>
                </VBox>
            </children>
        </HBox>

        <VBox spacing="10.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Label style="-fx-text-fill: #4B0081;" styleClass="big-label" text="Metas do Colaborador">
                    <font>
                        <Font size="32.0" />
                    </font>
                </Label>
                  <VBox fx:id="goalsVBox" spacing="15.0">
                      <padding>
                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                      </padding>
            </VBox>
            </children>
        </VBox>
    </children>
</VBox>
