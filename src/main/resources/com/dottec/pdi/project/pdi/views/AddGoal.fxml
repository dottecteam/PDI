<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dottec.pdi.project.pdi.viewmodel.AddGoalViewModel">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <VBox style="-fx-background-color: #F6F6F6; -fx-background-radius: 20;" VBox.vgrow="ALWAYS">
            <effect>
                <DropShadow color="#00000040" />
            </effect>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <ListView fx:id="goalsListView" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
</VBox>