<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" style="-fx-background-color: #F6F6F6;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dottec.pdi.project.pdi.viewmodel.AddActivityViewModel">
   <children>
      <VBox alignment="CENTER_RIGHT" spacing="30.0" style="-fx-background-color: #F6F6F6;">
         <children>
            <VBox fx:id="formPane" maxWidth="735.0" prefWidth="735.0" spacing="10.0" style="-fx-background-color: #F6F6F6; -fx-background-radius: 20; -fx-border-radius: 20;">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="50.0" />
               </VBox.margin>
               <children>
                  <StackPane alignment="TOP_LEFT" maxHeight="90.0" nodeOrientation="LEFT_TO_RIGHT">
                     <children>
                        <Label text="Nome*" textFill="#808080">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="formAddActivityName" alignment="BOTTOM_LEFT" maxHeight="90.0" maxWidth="1.7976931348623157E308" minHeight="55.0" styleClass="formInput">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </TextField>
                     </children>
                  </StackPane>
                  <StackPane alignment="TOP_LEFT" maxHeight="90.0" nodeOrientation="LEFT_TO_RIGHT">
                     <children>
                        <Label text="Descrição" textFill="#808080">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="formAddActivityDescription" alignment="BOTTOM_LEFT" maxHeight="90.0" maxWidth="1.7976931348623157E308" minHeight="55.0" styleClass="formInput">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </TextField>
                     </children>
                  </StackPane>
                  <StackPane alignment="TOP_LEFT" maxHeight="90.0" nodeOrientation="LEFT_TO_RIGHT">
                     <children>
                        <Label text="Categorias" textFill="#808080">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </Label>
                        <ChoiceBox id="selectCategories" fx:id="formAddActivityTags" maxHeight="90.0" minHeight="55.0" minWidth="200.0" prefWidth="1500.0" styleClass="formInput" />
                     </children>
                  </StackPane>
                  <StackPane alignment="TOP_LEFT" maxHeight="90.0" nodeOrientation="LEFT_TO_RIGHT">
                     <children>
                        <Label text="Prazo de conclusão*" textFill="#808080">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </Label>
                        <DatePicker id="activityDueDate" fx:id="formAddDeadline" maxWidth="1.7976931348623157E308" minHeight="55.0" styleClass="formInput" />
                     </children>
                  </StackPane>
               </children>
               <padding>
                  <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
            </VBox>
            <ButtonBar>
               <buttons>
                  <Button mnemonicParsing="false" onAction="#handleCancel" styleClass="cancel-button" text="Cancelar">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#handleConfirm" styleClass="basic-button" text="Confirmar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </buttons>
            </ButtonBar>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="10.0" />
   </padding>
   <stylesheets>
      <URL value="@../static/style/style_template.css" />
      <URL value="@../static/style/style_Activity.css" />
   </stylesheets>
</VBox>
