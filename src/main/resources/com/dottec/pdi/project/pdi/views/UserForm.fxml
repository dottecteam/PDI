<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" fillWidth="false" style="-fx-background-color: #F6F6F6;"
      stylesheets="@../static/style/style_template.css" xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dottec.pdi.project.pdi.viewmodel.UserFormViewModel">
    <children>
        <VBox alignment="CENTER_RIGHT" spacing="20.0" style="-fx-background-color: #F6F6F6;">
            <children>
                <VBox fx:id="formPane" maxWidth="735.0" prefWidth="735.0" spacing="10.0"
                      style="-fx-background-color: #F6F6F6; -fx-background-radius: 20; -fx-border-radius: 20;">
                    <VBox.margin>
                        <Insets left="50.0" right="50.0" top="50.0"/>
                    </VBox.margin>
                    <children>
                        <StackPane alignment="TOP_LEFT" maxHeight="90.0" nodeOrientation="LEFT_TO_RIGHT">
                            <children>
                                <Label text="Nome*" textFill="#808080">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>
                                </Label>
                                <TextField fx:id="txtName" alignment="BOTTOM_LEFT" maxHeight="90.0"
                                           maxWidth="1.7976931348623157E308" minHeight="55.0" styleClass="formInput">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </TextField>
                            </children>
                        </StackPane>
                        <StackPane alignment="TOP_LEFT" maxHeight="90.0" nodeOrientation="LEFT_TO_RIGHT">
                            <children>
                                <Label text="Email*" textFill="#808080">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>
                                </Label>
                                <TextField fx:id="txtEmail" alignment="BOTTOM_LEFT" maxHeight="90.0"
                                           maxWidth="1.7976931348623157E308" minHeight="55.0" styleClass="formInput">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </TextField>
                            </children>
                        </StackPane>
                        <StackPane fx:id="passwordFieldContainer" alignment="TOP_LEFT" maxHeight="90.0"
                                   nodeOrientation="LEFT_TO_RIGHT">
                            <children>
                                <Label fx:id="passwordLabel" text="Senha*" textFill="#808080">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>
                                </Label>
                                <PasswordField fx:id="txtPassword" alignment="BOTTOM_LEFT" maxHeight="90.0"
                                               minHeight="55.0" minWidth="200.0" prefWidth="1000.0"
                                               styleClass="formInput">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </PasswordField>
                            </children>
                        </StackPane>
                        <StackPane alignment="TOP_LEFT" maxHeight="90.0" nodeOrientation="LEFT_TO_RIGHT">
                            <children>
                                <Label text="Cargo*" textFill="#808080">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>
                                </Label>
                                <ChoiceBox fx:id="cbRole" maxHeight="90.0" minHeight="55.0" minWidth="200.0"
                                           prefWidth="1500.0" styleClass="formInput"/>
                            </children>
                        </StackPane>
                        <StackPane fx:id="departmentFieldContainer" alignment="TOP_LEFT" maxHeight="90.0"
                                   nodeOrientation="LEFT_TO_RIGHT" visible="false" managed="false">
                            <children>
                                <Label text="Setor*" textFill="#808080">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>
                                </Label>
                                <ChoiceBox fx:id="cbDepartment" maxHeight="90.0" minHeight="55.0" minWidth="200.0"
                                           prefWidth="1500.0" styleClass="formInput"/>
                            </children>
                        </StackPane>
                    </children>
                    <padding>
                        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
                    </padding>
                    <effect>
                        <DropShadow/>
                    </effect>
                </VBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="btnConfirm" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                onAction="#handleSave" styleClass="basic-button" text="Confirmar" textAlignment="CENTER"
                                textFill="WHITE" wrapText="true">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Button>
                        <Button fx:id="btnCancel" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                onAction="#handleCancel" styleClass="cancel-button" text="Cancelar"
                                textAlignment="CENTER" wrapText="true">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@../static/style/style_template.css"/>
    </stylesheets>
</VBox>